<?xml version="1.0" encoding= "UTF-8"?>
<stereo-vision>
    <processstep name="Cameras" group="Camera configuration" color="darkGray">

        <parameter name="Camera Selection" type="selectable">
            <description>The camera pair can be selected here</description>
            <option>Camera 1 and 2</option>
            <option>Camera 1 and 3</option>
            <option>Camera 1 and 4</option>
            <option>Camera 2 and 3</option>
            <option>Camera 2 and 4</option>
            <option>Camera 3 and 4</option>
            <option>Camera 5 and 6</option>
            <option>Camera 5 and 7</option>
            <option>Camera 5 and 8</option>
            <option>Camera 6 and 7</option>
            <option>Camera 6 and 8</option>
            <option>Camera 7 and 8</option>
            <option> Alex </option>
        </parameter>

        <parameter name="Tristan" type="boolean" init="enabled">
            <description> This is a description </description>
            </parameter>

        <parameter name="Shot mode" type="selectable">
            <option>Single shot mode</option>
            <option>Continous mode</option>
        </parameter>

        <parameter name="hSize" type="numeric" min="320" init="640" max="1920" >
            <description>Determines the horizontal size of the camera image</description>
        </parameter>

        <parameter name="vSize" type="numeric" min="240" init="480" max="1080" ></parameter>

    </processstep>

    <processstep name="Equalisation" group="Camera calibration" color="darkCyan">
        <parameter name="Enable" type="boolean" init="disabled"></parameter>
    </processstep>

    <processstep name="Rectification" group="Camera calibration" color="darkMagenta">
        <parameter name="Enable" type="boolean" init="enabled">
            <description>Enable the rectification step</description>
        </parameter>

        <parameter name="Quickmode" type="boolean" init="enabled">
            <description>Enable the rectification step</description>
        </parameter>

        <parameter name="Test1" type="boolean" init="disebled">
            <description>Enable the rectification step</description>
        </parameter>

        <parameter name="Test2" type="boolean" init="enabled">
            <description>Enable the rectification step</description>
        </parameter>

        <parameter name="Test3" type="boolean" init="enabled">
            <description>Enable the rectification step</description>
        </parameter>

    </processstep>
</stereo-vision>

